generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model Inventory {
  id                String  @id @default(cuid()) @map("_id")
  name              String
  place             String
  owner             String
  email             String
  brand             String
  charger           String
  model             String
  ramQuantity       String
  storage           String
  processor         String
  operationalSystem String
  guarantee         String
  serviceTag        String
  heritage          String
  status            String
  description       String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}
